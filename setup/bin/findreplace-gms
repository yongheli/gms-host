#!/usr/bin/env perl
use strict;
use warnings;
use Sys::Hostname;
my $hostname = Sys::Hostname::hostname;

my %replace = (
    GMS_HOST => $hostname,
);
my $line = 0;
while (my $row = <>) {
    $line++;
    my $old = $row;
    my $changes = 0;
    for my $key (keys %replace) {
        my $value = $replace{$key};
        if (not defined $value) {
            die "no value for $key, but found in content at line $line!:\n$row";
        }
        if ($row =~ s/$key/$value/g) {
            $changes++;
        }
    }
    if ($changes) {
        print STDERR "< $old-\n>$row"
    }
    print $row;
}

